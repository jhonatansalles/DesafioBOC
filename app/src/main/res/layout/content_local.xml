<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.desafiobeerorcoffe.LocalActivity"
    tools:showIn="@layout/activity_local">


    <TextView
        android:id="@+id/txtNovoLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Novo Local"
        android:textColor="@color/colorOrange"
        android:textSize="20dp"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/colorOrange"
        android:focusable="false" />


    <EditText
        android:id="@+id/editLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Local" />

    <TextView
        android:id="@+id/txtEndereco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Endereço"
        android:textColor="@color/colorOrange"
        android:textSize="20dp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorOrange"
        android:focusable="false" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editRua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rua" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editNumero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="100dp"
                android:hint="Nº" />

            <EditText
                android:id="@+id/editBairro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bairro" />
        </LinearLayout>

        <EditText
            android:id="@+id/editCidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cidade" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editUf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="150dp"
                android:hint="UF" />

            <EditText
                android:id="@+id/editPais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="País" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txtCoordenadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coordenadas"
        android:textColor="@color/colorOrange"
        android:textSize="20dp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorOrange"
        android:focusable="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editLatitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="180dp"
            android:hint="Latitude"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/editLongitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="180dp"
            android:hint="Longitude"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtBebidasDisponviel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bebidas disponível"
        android:textColor="@color/colorOrange"
        android:textSize="20dp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorOrange"
        android:focusable="false" />

    <RadioGroup
        android:id="@+id/radioBebidas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioButtonCerveja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerveja" />

        <RadioButton
            android:id="@+id/radioButtonCafe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Café" />

        <RadioButton
            android:id="@+id/radioButtonAmbos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ambos"
            android:checked="true"/>
    </RadioGroup>


</LinearLayout>
